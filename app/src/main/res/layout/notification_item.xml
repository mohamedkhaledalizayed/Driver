<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_layout"
        app:cardCornerRadius="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/feed_back_item_bg"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:background="@color/colorPrimaryDark"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride more. Pay less"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="@dimen/_12ssp"
                    android:id="@+id/notification_title"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 days ago"
                    android:textSize="@dimen/_10ssp"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="use this promo code to get discount up to 30%"
                    android:layout_below="@+id/notification_title"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/notification_content"
                    android:textSize="@dimen/_10ssp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read more"
                    android:layout_below="@+id/notification_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="#D5436A"
                    android:textSize="@dimen/_10ssp"
                    />
            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>