<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimary"
        tools:context=".view.activity.SignUpActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_16sdp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30sdp"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_25ssp"
                android:textStyle="bold" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Ex:John@gmail.com"
                    android:textColorHint="#A7A7AA"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:textSize="@dimen/_10ssp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Password"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="textPassword"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:textColorHint="#A7A7AA"
                    android:textSize="@dimen/_10ssp" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Email"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColorHint="#A7A7AA"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:textSize="@dimen/_10ssp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Phone Number"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="textPassword"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:textColorHint="#A7A7AA"
                    android:textSize="@dimen/_10ssp" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Age"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="textPassword"
                    android:padding="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:textColorHint="#A7A7AA"
                    android:textSize="@dimen/_10ssp" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/color_white"
                    android:id="@+id/sms"
                    android:layout_weight="1"
                    android:checked="true"
                    android:onClick="sms"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="@color/color_white"
                    android:id="@+id/email"
                    android:layout_weight="1"
                    android:onClick="email"
                    />

            </RadioGroup>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textColor="@color/color_white"
                android:text="i have read and accept the terms &amp; conditions"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textColor="@color/color_white"
                android:text="i have read and accept the privacy policy"
                android:layout_marginTop="@dimen/_10sdp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/search_bg"
                android:onClick="signUp"
                android:text="Sign Up"
                android:textColor="#fff" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you have an account?"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="#A7A7AA"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Sign IN"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:onClick="singIn"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>




    </ScrollView>
</layout>